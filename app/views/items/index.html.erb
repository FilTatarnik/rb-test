<p id="notice"><%= notice %></p>

<h1>Items</h1>
<!-- <style>
  a {
    color:blue;
  }
</style> -->

<table>
  <thead>
    <tr>
      <th>Item number</th>
      <th>Sap number</th>
      <th>Tr number</th>
      <th>Rb number</th>
      <th>Name</th>
      <th>Machine</th>
      <th>Material</th>
      <th>Finish</th>
      <th>Lead time</th>
      <th>Additional</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_number %></td>
        <td><%= item.sap_number %></td>
        <td><%= item.tr_number %></td>
        <td><%= item.rb_number %></td>
        <td><%= item.name %></td>
        <td><%= item.machine %></td>
        <td><%= item.material %></td>
        <td><%= item.finish %></td>
        <td><%= item.lead_time %></td>
        <td><%= item.additional %></td>
        <td><%= link_to 'Show', item, class: "show" %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "show"%></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "show"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

